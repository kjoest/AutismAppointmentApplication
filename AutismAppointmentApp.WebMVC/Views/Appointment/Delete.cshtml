@model AutismAppointmentApp.Models.AppointmentModels.AppointmentDetail

@{
    ViewBag.Title = "Delete";
}

<h3 class="appointment-delete">Are you sure you want to cancel this appointment?</h3>
<h4>Appointment Details</h4>
<hr />

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-8">
            <div class="card-header">Patient ID: @Html.DisplayFor(model => model.AppointmentId)</div>
            <div class="card-body">
                <h5 class="card-title"><b>Appointment Date:</b> @Html.DisplayFor(model => model.DateOfAppointment)</h5>
                <br />
                <p class="card-text"><b>Appointment Details:</b> @Html.DisplayFor(model => model.DetailOfAppointment)</p>
                <p class="card-text"><b>Therapist ID:</b> @Html.DisplayFor(model => model.TherapistId)</p>
                <p class="card-text"><b>Patient ID:</b> @Html.DisplayFor(model => model.PatientId)</p>
                <p class="card-text"><b>Created Date:</b> @Html.DisplayFor(model => model.CreatedUtc)</p>
                <p class="card-text"><b>Modified Date:</b> @Html.DisplayFor(model => model.ModifiedDate)</p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default btn btn-primary btn-sm" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

