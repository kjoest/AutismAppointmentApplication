@model AutismAppointmentApp.Models.PatientModels.PatientDetail

@{
    ViewBag.Title = "Delete Patient";
}

<h3 class="patient-delete">Are you sure you want to delete this Patient?</h3>
<h4>Patient Information</h4>
<hr />

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.ImagePath)" class="img-fluid rounded-start" alt="@Html.DisplayFor(model => model.FullName)">
        </div>
        <div class="col-md-8">
            <div class="card-header">Patient ID: @Html.DisplayFor(model => model.PatientId)</div>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.FullName)</h5>
                <p class="card-text">@Html.DisplayFor(model => model.Gender)</p>
                <p class="card-text">@Html.DisplayFor(model => model.Address)</p>
                <p class="card-text">Date of Birth: @Html.DisplayFor(model => model.DateOfBirth)</p>
                <p class="card-text">Therapy Needed: @Html.DisplayFor(model => model.TherapyNeeded)</p>
                <p class="card-text">Has Therapy: @Html.DisplayFor(model => model.HasTherapy)</p>
                <p class="card-text">Created Date: @Html.DisplayFor(model => model.CreatedUtc)</p>
                <p class="card-text">Modified Date: @Html.DisplayFor(model => model.ModifiedUtc)</p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default btn btn-primary btn-sm" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

