@model IEnumerable<AutismAppointmentApp.Models.TherapistModels.TherapistListDetail>

@{
    ViewBag.Title = "Index";
}

<h2 class="therapist-index">Current Therapists</h2>

<button id="buttons">
    @Html.ActionLink("Create New", "Create")
</button>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="card text-white bg-primary mb-3 index-cards" style="max-width: 25rem;">
            <div class="card-header">Therapist ID: @Html.DisplayFor(modelItem => item.TherapistId)</div>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.FullName)</h5><br />
                <p class="card-text">Specialization: @Html.DisplayFor(modelItem => item.TherapySpecialist)</p>
                <p class="card-text">Certified: @Html.DisplayFor(modelItem => item.IsCertified)</p>
                <p class="card-text">Date Added: @Html.DisplayFor(modelItem => item.CreatedUtc)</p>
                <p class="card-text">Date Modified: @Html.DisplayFor(modelItem => item.ModifiedUtc)</p>
                <button class="buttons">@Html.ActionLink("Edit", "Edit", new { id = item.TherapistId })</button>|
                <button class="buttons">@Html.ActionLink("Details", "Details", new { id = item.TherapistId })</button>|
                <button class="buttons">@Html.ActionLink("Delete", "Delete", new { id = item.TherapistId })</button>
            </div>
        </div>
    }
</div>

